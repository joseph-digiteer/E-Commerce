<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |product| %>
      <% product.product_variants.each do |variant| %>
        <tr>
          <td><%= variant.name %></td>
          <td><%= variant.description %></td>
          <td><%= number_to_currency(variant.price) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
