<h1>Products</h1>

<%= search_form_for @q,url: customers_products_path, data: {turbo_frame: :results, turbo_action: 'advance'} do |f| %>
<%= f.search_field :name_cont, oninput: 'this.form.requestSubmit();', autofocus: true, placeholder: 'Search' %>
<% end %>

<%= turbo_frame_tag "products-list", data: { turbo_action: 'advance' }, class: "space-y-4" do %>
  <%= render partial: "product_list", locals: { products: @products } %>
  <%== pagy_nav(@pagy) %> <!-- Add pagination navigation -->
<% end %>
